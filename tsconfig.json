{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "forceConsistentCasingInFileNames": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "$types/*": ["src/@types/*"],
      "$components/*": ["src/components/*",],
  
      "$constants/*": ["src/constants/*"],
      "$functions/*": ["src/functions/*"],
      "$layouts/*": ["src/layouts/*"]
    },

  },
  "include": ["src"]
}